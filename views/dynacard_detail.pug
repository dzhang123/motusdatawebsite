extends layout

block content
    section(class=dynacard.name)
        input(type='checkbox' class='card-selector') 
        h2 #{dynacard.name}.csv
        p #{dynacard.cardtype.name}
        img(src='/processed/' + dynacard.name + '.png', alt=dynacard.name)
        
    div
        p 
            a(href=dynacard.url +'/delete') 
                button.btn.btn-secondary(name='delete') Delete Dynacard
        p
            a(href=dynacard.url + '/update') 
                button.btn.btn-secondary(name='update') Update Dynacard